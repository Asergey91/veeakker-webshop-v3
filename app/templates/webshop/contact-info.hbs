{{outlet}}
<ul class="breadcrumb-cart">
  <li><a href="basket">Winkelmandje</a></li>
  <li><span class="breadcrumb-txt">Uw Gegevens</span></li>
  <li><span class="breadcrumb-nxt">Levering / Afhaling</span></li>
  <li><span class="breadcrumb-nxt">Betalingsgegevens</span></li>
  <li><span class="breadcrumb-nxt">Bevestig Bestelling</span></li>
</ul>
<div class="fix"></div>
<div id="checkout-contact">
  <div class="contact-info">
    <h2>Contact informatie</h2>
    <p>Heeft u al een account? <a href="login">Aanmelden</a></p>
    <div class="fix"></div>

    <asp:TextBox ID="txtMail" runat="server" placeholder="E-mail"></asp:TextBox>
    <asp:RequiredFieldValidator ID="RequiredFieldValidator1" runat="server" ControlToValidate="txtMail" ErrorMessage="*" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator>
    <asp:RegularExpressionValidator ID="RegularExpressionValidator1" runat="server" ControlToValidate="txtMail" ErrorMessage="*" ForeColor="#FF0066" ValidationExpression="\w+([-+.']\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*" Display="Dynamic" Text="*"></asp:RegularExpressionValidator>
    <br />
    <h2>Vul je gegevens in:</h2>
    <asp:TextBox ID="txtName" runat="server" placeholder="Naam"></asp:TextBox>
    <asp:RequiredFieldValidator ID="RequiredFieldValidator2" runat="server" ControlToValidate="txtName" ErrorMessage="*" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator><br />

    <asp:TextBox ID="txtCompany" runat="server" placeholder="Bedrijf + BTW nummer (optioneel)"></asp:TextBox><br />

    <asp:TextBox ID="txtStreet" runat="server" placeholder="Straat"></asp:TextBox>
    <asp:RequiredFieldValidator ID="RequiredFieldValidator3" runat="server" ControlToValidate="txtStreet" ErrorMessage="*" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator><br />
    <asp:TextBox ID="txtNumber" runat="server" placeholder="Huisnummer"></asp:TextBox>
    <asp:RequiredFieldValidator ID="RequiredFieldValidator4" runat="server" ControlToValidate="txtNumber" ErrorMessage="*" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator><br />
    <asp:TextBox ID="txtCode" runat="server" placeholder="Postcode"></asp:TextBox>
    <asp:RequiredFieldValidator ID="RequiredFieldValidator5" runat="server" ControlToValidate="txtCode" ErrorMessage="*" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator><br />
    <asp:TextBox ID="txtCity" runat="server" placeholder="Gemeente"></asp:TextBox>
    <asp:RequiredFieldValidator ID="RequiredFieldValidator6" runat="server" ControlToValidate="txtCity" ErrorMessage="*" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator><br />
    <asp:TextBox ID="txtPhone" runat="server" placeholder="Gsm / Tel waarop bereikbaar bij levering / afhaling"></asp:TextBox>
    <asp:RequiredFieldValidator ID="RequiredFieldValidator7" runat="server" ControlToValidate="txtPhone" ErrorMessage="*" ForeColor="Red" Display="Dynamic"></asp:RequiredFieldValidator><br /><br />




    <div class="button-product-cart"><a href="delivery">VERDER BESTELLEN</a></div>
  </div>
</div>
{{outlet}}